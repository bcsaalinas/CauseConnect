<%- include('../layouts/header', { title, page: 'contact', extraCss }) %>

<section class="page-section contact-hero snap-target" data-animate="section">
  <div class="content-max text-center fade-up" data-animate="stagger">
    <p class="eyebrow text-uppercase mb-2">contact</p>
    <h1 class="hero-title fs-1 mb-3" data-animate="split-lines">We’d love to hear from you</h1>
    <p class="hero-subtitle fs-5 mb-0" data-animate="fade">Reach out with questions, partnerships, or ideas to support local initiatives.</p>
  </div>
</section>

<section class="page-section contact-form-section snap-target" data-animate="section">
  <div class="content-max position-relative" data-animate="stagger">
    <div class="contact-ambient" aria-hidden="true"></div>
    <div class="row g-4 align-items-start position-relative" data-animate="stagger" data-stagger-target=".glass-panel, form[data-animate]">
      <div class="col-lg-6 order-2 order-lg-1">
        <div class="contact-details glass-panel p-4 fade-up reveal-mask" data-animate="float-card">
          <h2 class="h4 mb-3">Office &amp; support</h2>
          <p class="mb-3">Our team is based in Guadalajara. We’ll get back to you within 2 business days.</p>
          <ul class="list-unstyled d-grid gap-3 mb-4">
            <li class="d-flex gap-3">
              <span class="badge-soft">Email</span>
              <span>hello@causeconnect.org</span>
            </li>
            <li class="d-flex gap-3">
              <span class="badge-soft">Phone</span>
              <span>+52 (33) 5555 1234</span>
            </li>
            <li class="d-flex gap-3">
              <span class="badge-soft">Address</span>
              <span>Av. Chapultepec 123, Guadalajara, Jal.</span>
            </li>
          </ul>
          <div class="contact-social d-flex gap-3" data-animate="stagger" data-stagger-target=".social-card">
            <a href="#" class="social-card glass-panel tilt-card d-flex align-items-center justify-content-center" data-animate="magnet">FB</a>
            <a href="#" class="social-card glass-panel tilt-card d-flex align-items-center justify-content-center" data-animate="magnet">IG</a>
            <a href="#" class="social-card glass-panel tilt-card d-flex align-items-center justify-content-center" data-animate="magnet">TW</a>
          </div>
        </div>
      </div>
      <div class="col-lg-6 order-1 order-lg-2">
        <form class="contact-form glass-panel p-4 p-md-5 fade-up reveal-mask" method="POST" action="/contact" novalidate data-animate="float-card">
          <div class="contact-field">
            <label class="form-label" for="name">Name</label>
            <input name="name" type="text" class="form-control" id="name" placeholder="Full name" required>
            <small class="form-text invalid-feedback">please add your name</small>
          </div>

          <div class="contact-field">
            <label class="form-label" for="email">E-mail</label>
            <input name="email" type="email" class="form-control" id="email" placeholder="email@example.com" required>
            <small class="form-text invalid-feedback">please use a valid email</small>
          </div>

          <div class="contact-field">
            <label class="form-label" for="message">Message</label>
            <textarea name="message" class="form-control" id="message" rows="4" placeholder="Write your message..." required></textarea>
            <small class="form-text invalid-feedback">let us know how we can help</small>
          </div>

          <button type="submit" class="btn btn-pill btn-pill-primary w-100" data-animate="magnet">Submit</button>

          <% if (flash && flash.message) { %>
            <div class="contact-flash alert alert-<%= flash.type || 'info' %> mt-3 fade-up is-visible"><%= flash.message %></div>
          <% } %>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>
