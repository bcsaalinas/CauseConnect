<%- include('../layouts/header', { title, page: 'sdgs', extraCss }) %>

<section class="page-section sdg-hero snap-target" data-animate="section">
  <div class="content-max" data-animate="stagger">
    <div class="row align-items-center gy-4" data-stagger-target="[data-animate-child]">
      <div class="col-lg-6 fade-up" data-animate-child>
        <div class="section-heading text-lg-start text-center mb-3">
          <p class="eyebrow text-uppercase mb-2">the 17 goals</p>
          <h1 class="hero-title fs-1 mb-4" data-animate="split-lines">Sustainable Development Goals</h1>
          <p class="mb-0">A shared blueprint for peace and prosperity. Explore each goal to see how communities and organizations work together to build a better world.</p>
        </div>
      </div>
      <div class="col-lg-6 fade-up" data-animate-child data-animate="parallax-card" data-parallax="0.2">
        <div class="sdg-hero-visual glass-panel reveal-mask" data-animate="mask">
          <img src="/images/sdgs.png" alt="Sustainable Development Goals" class="hero-visual img-fluid" />
        </div>
      </div>
    </div>
  </div>
</section>

<section class="page-section sdg-featured snap-target" data-animate="section">
  <div class="content-max">
    <div class="story-grid">
      <article class="story-card" data-animate="mask">
        <span class="badge-soft d-inline-block text-uppercase small mb-3">focus goal</span>
        <h3 class="h4 mb-3">Goal 11: Sustainable Cities &amp; Communities</h3>
        <p class="mb-0">Our partners co-create urban initiatives that balance housing, green corridors, and inclusive transport so that every neighborhood thrives.</p>
      </article>
      <div class="story-media reveal-mask" data-animate="mask">
        <img src="/images/sdgs.png" alt="City skyline with sustainable infrastructure">
      </div>
      <article class="story-card story-stat text-center text-lg-start" data-animate="mask">
        <span class="badge-soft d-inline-flex align-items-center px-3 py-1 text-uppercase small">impact signal</span>
        <div class="display-4" data-animate="counter" data-counter-end="48" data-counter-suffix="+">48+</div>
        <p class="mb-0">projects mapped through the SDG dashboard help residents prioritize next investments.</p>
      </article>
    </div>
  </div>
</section>

<section class="page-section sdg-overview snap-target" data-animate="section">
  <div class="content-max">
    <div class="row g-4" data-animate="stagger-cards" data-stagger-target=".sdg-tile" data-skew-target=".sdg-tile">
      <% const goals = [
        { number: 1, title: "No Poverty", copy: "Eradicate poverty in all forms everywhere." },
        { number: 2, title: "Zero Hunger", copy: "End hunger and ensure food security through sustainable agriculture." },
        { number: 3, title: "Good Health", copy: "Guarantee healthy lives and well-being for all ages." },
        { number: 4, title: "Quality Education", copy: "Provide inclusive and equitable education for everyone." },
        { number: 5, title: "Gender Equality", copy: "Achieve equality and empower all women and girls." },
        { number: 6, title: "Clean Water & Sanitation", copy: "Ensure safe water and sanitation access for all." },
        { number: 7, title: "Affordable & Clean Energy", copy: "Provide sustainable, modern, and reliable energy." },
        { number: 8, title: "Decent Work & Growth", copy: "Promote inclusive economic growth and decent jobs." },
        { number: 9, title: "Industry, Innovation & Infrastructure", copy: "Build resilient infrastructure and foster innovation." },
        { number: 10, title: "Reduced Inequalities", copy: "Decrease inequality within and among countries." },
        { number: 11, title: "Sustainable Cities", copy: "Make cities inclusive, safe, and environmentally friendly." },
        { number: 12, title: "Responsible Consumption", copy: "Ensure sustainable production and consumption patterns." },
        { number: 13, title: "Climate Action", copy: "Take urgent action to combat climate change." },
        { number: 14, title: "Life Below Water", copy: "Conserve oceans and marine resources." },
        { number: 15, title: "Life on Land", copy: "Protect forests, biodiversity, and ecosystems." },
        { number: 16, title: "Peace, Justice & Institutions", copy: "Promote peace, justice, and strong institutions." },
        { number: 17, title: "Partnerships for the Goals", copy: "Strengthen global cooperation for sustainability." }
      ]; %>
      <% goals.forEach(goal => { %>
        <div class="col-12 col-md-6 col-lg-4 fade-up">
          <article class="sdg-tile glass-panel h-100 p-4 reveal-mask" data-animate="mask">
            <div class="d-flex align-items-start gap-3 mb-3">
              <span class="sdg-number"><%= goal.number %></span>
              <div>
                <h3 class="h5 mb-1"><%= goal.title %></h3>
                <p class="mb-0"><%= goal.copy %></p>
              </div>
            </div>
            <button class="sdg-more btn btn-link p-0 mt-2" type="button" data-goal="<%= goal.number %>">
              Learn more
            </button>
          </article>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<section class="page-section sdg-videos snap-target" data-animate="section">
  <div class="content-max">
    <div class="section-heading fade-up" data-animate="stagger">
      <p class="eyebrow text-uppercase">learn more</p>
      <h2 data-animate="split-lines">The goals in action</h2>
      <p>Watch official explainers and community-driven stories that showcase the SDGs around the globe.</p>
    </div>
    <div class="row g-4 justify-content-center">
      <div class="col-md-6 fade-up">
        <div class="ratio ratio-16x9 glass-panel overflow-hidden reveal-mask" data-animate="mask">
          <iframe src="https://www.youtube.com/embed/o08ykAqLOxk" title="What are the SDGs?" allowfullscreen></iframe>
        </div>
      </div>
      <div class="col-md-6 fade-up">
        <div class="ratio ratio-16x9 glass-panel overflow-hidden reveal-mask" data-animate="mask">
          <iframe src="https://www.youtube.com/embed/enGJyhu6Xr0" title="The 17 Goals Explained" allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="page-section sdg-horizontal snap-target" data-animate="section">
  <div class="content-max">
    <div class="section-heading text-center fade-up" data-animate="stagger">
      <p class="eyebrow text-uppercase mb-2">spotlight goals</p>
      <h2>Browse featured SDG showcases</h2>
      <p class="mb-0">Navigate through highlighted projects making waves across Latin America.</p>
    </div>
    <div class="horizontal-showcase" data-animate="horizontal-gallery">
      <div class="showcase-track">
        <article class="showcase-card glass-panel p-4 reveal-mask" data-animate="mask">
          <span class="badge-soft d-inline-block text-uppercase small mb-2">Goal 2</span>
          <h3 class="h5 mb-2">Community Kitchens MX</h3>
          <p class="small text-muted mb-3">Redesigning food rescue programs with zero waste logistics.</p>
          <a href="/directory?q=Community+Kitchens" class="btn btn-pill btn-pill-outline btn-sm">Explore</a>
        </article>
        <article class="showcase-card glass-panel p-4 reveal-mask" data-animate="mask">
          <span class="badge-soft d-inline-block text-uppercase small mb-2">Goal 6</span>
          <h3 class="h5 mb-2">Blue Water Alliance</h3>
          <p class="small text-muted mb-3">Deploying low-cost filtration to lakeside communities.</p>
          <a href="/directory?q=Blue+Water+Alliance" class="btn btn-pill btn-pill-outline btn-sm">Explore</a>
        </article>
        <article class="showcase-card glass-panel p-4 reveal-mask" data-animate="mask">
          <span class="badge-soft d-inline-block text-uppercase small mb-2">Goal 12</span>
          <h3 class="h5 mb-2">Circular Craft Labs</h3>
          <p class="small text-muted mb-3">Women-led cooperatives transforming textile offcuts into training.</p>
          <a href="/directory?q=Circular+Craft+Labs" class="btn btn-pill btn-pill-outline btn-sm">Explore</a>
        </article>
        <article class="showcase-card glass-panel p-4 reveal-mask" data-animate="mask">
          <span class="badge-soft d-inline-block text-uppercase small mb-2">Goal 15</span>
          <h3 class="h5 mb-2">Bosque Vivo</h3>
          <p class="small text-muted mb-3">Monitoring biodiversity recoveries with local youth scientists.</p>
          <a href="/directory?q=Bosque+Vivo" class="btn btn-pill btn-pill-outline btn-sm">Explore</a>
        </article>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>
